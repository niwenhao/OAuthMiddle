<p id="notice"><%= notice %></p>

<h1>Auth Users</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Passwd</th>
      <th>Name</th>
      <th>Mail</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auth_users.each do |auth_user| %>
      <tr>
        <td><%= auth_user.userid %></td>
        <td><%= auth_user.passwd %></td>
        <td><%= auth_user.name %></td>
        <td><%= auth_user.mail %></td>
        <td><%= auth_user.address %></td>
        <td><%= link_to 'Show', auth_user %></td>
        <td><%= link_to 'Edit', edit_auth_user_path(auth_user) %></td>
        <td><%= link_to 'Destroy', auth_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Auth User', new_auth_user_path %>
